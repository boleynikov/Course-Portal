@using Microsoft.AspNetCore.Identity
@using Domain
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Services
@using Services.Interface
@inject IAuthorizedUserService AuthorizedUser

<ul class="navbar-nav">
@if (AuthorizedUser.Account != null)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-controller="Identity" asp-action="UserProfile" title="Manage">@AuthorizedUser.Account.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-controller="Identity" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-controller="Identity" asp-action="RegisterForm">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-controller="Identity" asp-action="LoginForm">Login</a>
    </li>
}
</ul>
