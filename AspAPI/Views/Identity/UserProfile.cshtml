@using Services.Interface
@using Domain
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IService<Domain.Course> CourseService
@model Domain.User
@{
    ViewData["Title"] = "UserProfile";
}

<h1>User Profile</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserSkills)
        </dt>
        <dd class="col-sm-10">
            @if (Model.UserSkills.Count == 0)
            {
                <p>You haven't skills yet</p>
            }
            else
            {
                @foreach (var skill in Model.UserSkills)
                {
                    <span class="card-text"><small class="text-muted">@skill.Points @skill.Name</small></span>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserCourses)
        </dt>
        <dd class="col-sm-10">
            @if (Model.UserCourses.Count == 0)
            {
                <p>You haven't courses yet</p>
            }
            else
            {
                @foreach (var coursePair in Model.UserCourses)
                {
                    var course = await CourseService.GetById(coursePair.Key);
                    <div class="card mb-3" style="max-width: 650px;">
                        <div class="row g-0" onclick="location.href = '@Url.Action("Index", "Course" , new { id=course.Id })';">
                            <div class="col-md-4">
                                <img src="https://picsum.photos/300/200" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <u>@course.Name</u>
                                    </h5>
                                    <h6>
                                        <pre>                  @coursePair.Value.State @coursePair.Value.Percentage</pre>
                                    </h6>
                                    <p class="card-text">@course.Description</p>
                                    <p class="card-text"><small class="text-muted">@course.Status</small></p>
                                </div>
                            </div>
                        </div>
                        <a type="submit" class="btn-outline-primary rounded bg-light border-white text-secondary text-center" asp-action="RemoveCourseFromUser" asp-controller="Course" asp-route-courseId="@course.Id">Delete</a>
                    </div>
                }
            }
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <form action="@Url.Action("CreateCourseForm", "Identity", new {})" method="post">
                <input type="submit" class="btn btn-outline-primary" value="Create new course" />
            </form>
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Back</a>
</div>
