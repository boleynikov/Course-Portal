@model LoginModel
<h1>Login to your account</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Identity" asp-controller="Identity" asp-action="LoginUser">
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter email" })
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Email)</span><br />
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Enter password" })
                <span class="text-danger">@Html.ValidationMessageFor(x => x.Password)</span><br />
                <span class="text-danger" asp-validation-summary="ModelOnly"></span>
                <input type="submit" class="btn btn-outline-primary" value="Login" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}