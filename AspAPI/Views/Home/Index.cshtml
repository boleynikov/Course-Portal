@model IEnumerable<Domain.Course>
@{
    ViewData["Title"] = "Домашня сторінка";
}
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Convert.ToInt32(ViewData["courseCount"]) / 6; i++)
        {
            <li class="page-item"><a class="page-link text-black-50" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
        }
    </ul>
</nav>
@foreach (var course in Model)
{
    <div class="card mb-3" style="max-width: 650px;" onclick="location.href = '@Url.Action("Index", "Course", new { id = course.Id })';">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://picsum.photos/300/200" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body" id="courseInfo">
                    <h5 class="card-title">@course.Name</h5>
                    <p class="card-text">@course.Description</p>
                    <p class="card-text"><small class="text-muted">@course.Status</small></p>
                </div>
            </div>
        </div>
    </div>
}