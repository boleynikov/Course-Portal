@model (IEnumerable<Domain.Course>, int)
@{
    ViewData["Title"] = "Домашня сторінка";
}
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Convert.ToInt32(ViewData["courseCount"]) / 6; i++)
        {
            if (i == Model.Item2)
            {
                <li class="page-item"><a class="page-link active" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link text-black-50" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
        }
        @using (Html.BeginForm("Index", "Home", new { @searchString = "#searchString" }, FormMethod.Get))
        {
            <li class="row">
                <div class="col">
                    <input type="text" class="form-control" name="searchString" id="searchString" />
                </div>
                <div class="col">
                    <input type="submit" class="btn btn-outline-primary" value="Search" />
                </div>
            </li>
        }
    </ul>
</nav>
@foreach (var course in Model.Item1)
{
    <div class="card mb-3" onclick="location.href = '@Url.Action("Index", "Course", new { id = course.Id })';">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://picsum.photos/300/200" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body" id="courseInfo">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title">@course.Name</h5>
                        </div>
                        <div class="col-sm-3">
                            <strong>Status</strong>
                            <p class="card-text"><small class="text-muted">@course.Status</small></p>
                        </div>
                    </div>

                    <strong>Description</strong>
                    <p class="card-text">@course.Description</p>
                </div>
            </div>
        </div>
    </div>
}
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Convert.ToInt32(ViewData["courseCount"]) / 6; i++)
        {
            if (i == Model.Item2)
            {
                <li class="page-item"><a class="page-link active" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link text-black-50" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
        }
    </ul>
</nav>