@model (IEnumerable<Domain.Course>, int)
@{
    ViewData["Title"] = "Домашня сторінка";
}
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Convert.ToInt32(ViewData["pageCount"]); i++)
        {
            if (i == Model.Item2)
            {
                <li class="page-item"><a class="page-link active" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link text-black-50" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
        }
        @using (Html.BeginForm("Index", "Home", new { @searchString = "#searchString" }, FormMethod.Get))
        {
            <li class="row">
                <div class="col">
                    <input type="text" class="form-control" name="searchString" id="searchString" />
                </div>
                <div class="col">
                    <input type="submit" class="btn btn-outline-primary" value="Search" />
                </div>
            </li>
        }
    </ul>
</nav>
<div class="modal fade" id="modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Course details
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>
@foreach (var course in Model.Item1)
{
    <div class="card mb-3 pointer-event" onclick="openModal({url: '/Course/Index', data: '@course.Id'})">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://picsum.photos/300/200" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body" id="courseInfo">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title">@course.Name</h5>
                            <strong>Description</strong>
                            <p class="card-text">@course.Description</p>
                        </div>
                        <div class="col-sm-3">
                            <strong>Status</strong>
                            <p class="card-text"><small class="text-muted">@course.Status</small></p>
                            <strong>Author</strong>
                            <p class="card-text"><small class="text-muted">@course.Owner</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= Convert.ToInt32(ViewData["pageCount"]); i++)
        {
            if (i == Model.Item2)
            {
                <li class="page-item"><a class="page-link active" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link text-black-50" href="@Url.Action("Index","Home", new {page = i})">@i</a></li>
            }
        }
    </ul>
</nav>
<script src="~/js/courseModal.js"></script>